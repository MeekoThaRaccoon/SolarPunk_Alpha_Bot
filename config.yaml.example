bot:
  name: "solar-alpha-001"
  mode: "paper"
  scan_interval_hours: 6
  risk_tolerance: "medium"
  max_daily_trades: 3

redistribution:
  enabled: true
  split:
    crisis: 50
    you: 30
    network: 20
  
  crisis_orgs:
    - name: "World Central Kitchen"
      wallet: "0x1234567890abcdef1234567890abcdef12345678"
      percentage: 25
      chain: "ethereum"
      
  your_wallet: "0xYOUR_ETHEREUM_ADDRESS_HERE"
  network_fund: "0xSOLARPUNK_NETWORK_ADDRESS"

trading:
  paper_starting_balance: 1000.00
  allowed_markets:
    - crypto
    - prediction
  
  max_position_size: 100.00
  max_total_exposure: 300.00
  
  stop_loss: 10
  take_profit: 25

ai:
  model_path: "./models/llama-3.2-7b-q4_k_m.gguf"
  context_size: 4096
  temperature: 0.7
  max_tokens: 512

data_sources:
  crypto:
    - BTC-USD
    - ETH-USD
    - SOL-USD
  
  prediction_markets:
    predictit:
      enabled: true
    polymarket:
      enabled: false

logging:
  level: "INFO"
  console: true
  file: true
  file_path: "./logs/bot.log"

dashboard:
  enabled: true
  port: 8080
  host: "0.0.0.0"
